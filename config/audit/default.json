{
    "clusterSize" : 1,
    "maxPostSize" : "500mb",
    "context": "/ecrud/v1",
    "db": {
        "name": "audit",
        "url": "mongodb://localhost:27017/audit?connectTimeoutMS=300000&auto_reconnect=false",
	"autoReconnect": true,
	"reconnectRetryIntervalMS": 5000
    },
    "server": {
        "port": 3003,
        "host": "localhost"
    },
    "secureServer.DISABLED": {
        "port": 3004,
        "host": "localhost",
        "options": {
            "key": "config/server.key",
            "cert": "config/server.crt"
        }
    },
    "accessControl.DISABLED": {
        "testuser1": {
            "accessKeyId": "testuser1",
            "accessKeySecret": "pa$$w0rd1",
            "allowMethods": "*"
        },
        "testuser2": {
            "accessKeyId": "testuser2",
            "accessKeySecret": "pa$$w0rd2",
            "allowMethods": "POST"
        }
    },
    "eventHandlers": [
        {
            "name": "Console",
            "module": "../lib/consoleEventHandler",
            "events": [
                {
                    "event": "i",
                    "method": "onInsert"
                },
                {
                    "event": "u",
                    "method": "onUpdate"
                },
                {
                    "event": "d",
                    "method": "onDelete"
                }
            ],
            "options": {
                "operation": ["i", "u", "d"],
                "include": ["serviceTreatmentRecords", "disabilityBenefitsQuestionnaires"]
            }
        },
        {
            "name": "Async",
            "module": "../lib/consoleAsyncHandler",
            "events": [
                {
                    "event": "g",
                    "method": "onGet"
                }
            ],
            "options": {
            }
        },
        {
            "name": "Audit",
            "module": "../lib/consoleAuditHandler",
            "events": [
                {
                    "event": "i",
                    "method": "onInsert"
                },
                {
                    "event": "u",
                    "method": "onUpdate"
                },
                {
                    "event": "d",
                    "method": "onDelete"
                },
                {
                    "event": "r",
                    "method": "onRead"
                },
                {
                    "event": "g",
                    "method": "onGet"
                }
            ],
            "options": {
                "url": "http://localhost:3003/audit/audit"
            }
        }
    ],
    "debug": true,
    "log": {
        "console": {
            "level": "trace",
            "colorize": true,
            "label": "Audit",
            "timestamp": true
        },
        "file": {
            "filename": "Audit.log"
        }
    }
}
